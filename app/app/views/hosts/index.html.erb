<h1>Listing hosts</h1>

<table>
  <tr>
    <th>Ipaddress</th>
    <th>Name</th>
    <th>Bios Vendor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @hosts.each do |host| %>
  <tr>
    <td><%= host.ipaddress %></td>
    <td><%= host.name %></td>
	<td><% if host.bios != nil %><%= host.bios.bios_vendor %><% end %></td>
    <td><%= link_to 'Show', host %></td>
    <td><%= link_to 'Edit', edit_host_path(host) %></td>
    <td><%= link_to 'Destroy', host, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

